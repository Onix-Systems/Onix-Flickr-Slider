<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/loader_logo_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/loader_logo" />

    <TextView
        style="@style/TextLoadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work with image with"
        android:textSize="19sp" />

    <TextView
        style="@style/TextLoadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onix ImageDownloader"
        android:layout_margin="10dp"
        android:textSize="28sp" />

    <TextView
        style="@style/TextLoadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="component"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/image_logo_view"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:src="@drawable/splash_logo" />

</LinearLayout>