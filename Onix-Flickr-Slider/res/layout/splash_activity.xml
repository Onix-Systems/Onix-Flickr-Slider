<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/loader_logo_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/loader_logo" />

    <TextView
        style="@style/TextLoadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work with image with"
        android:textSize="14dp" />

    <TextView
        style="@style/TextLoadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onix ImageDownloader"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        style="@style/TextLoadingStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="component"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/image_logo_view"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:src="@drawable/splash_logo" />

</LinearLayout>